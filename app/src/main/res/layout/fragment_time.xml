<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context="com.example.makpro.recipedesign1.Fragments.TimeFragment"
    android:weightSum="1"
    android:background="@drawable/time">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView15"
        android:layout_weight="0.34" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 минут"
                android:id="@+id/CBtime1"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 минут"
                android:id="@+id/CBtime2"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 минут"
                android:id="@+id/CBtime3"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 минут"
                android:id="@+id/CBtime4"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 минут"
                android:id="@+id/CBtime5"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 час"
                android:id="@+id/CBtime6"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Более часа"
                android:id="@+id/CBtime7"
                android:checked="false"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/ApplyTime"
        android:layout_weight="0.66"
        android:background="#dc7d45" />
</LinearLayout>
